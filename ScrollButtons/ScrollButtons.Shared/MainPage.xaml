							<TextBlock Text="Item #1"
									   Width="313"
									   Height="100"
									   Margin="5" />

							<TextBlock Text="Item #2"
									   Width="313"
									   Height="100"
									   Margin="5" />

							<TextBlock Text="Item #3"
									   Width="313"
									   Height="100"
									   Margin="5" />

							<TextBlock Text="Item #4"
									   Width="313"
									   Height="100"
									   Margin="5" />

							<TextBlock Text="Item #5"
									   Width="313"
									   Height="100"
									   Margin="5" />

							<TextBlock Text="Item #6"
									   Width="313"
									   Height="100"
									   Margin="5" />

							<TextBlock Text="Item #7"
									   Width="313"
									   Height="100"
									   Margin="5" />

							<TextBlock Text="Item #8"
									   Width="313"
									   Height="100"
